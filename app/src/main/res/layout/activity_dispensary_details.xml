<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detailsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Hero image / logo (set from code) -->
        <ImageView
            android:id="@+id/dispensaryImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/app_name" />

        <!-- Name -->
        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dispensary Name"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:layout_marginBottom="12dp" />

        <!-- Open/Closed -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/open_now"
            android:textColor="#4CAF50"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Address (clickable to open maps) -->
        <TextView
            android:id="@+id/addressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:minHeight="48dp"
            android:text="123 Main Street, Cape Town"
            android:textColor="#101010"
            android:textSize="16sp" />

        <!-- Aggregate rating -->
        <TextView
            android:id="@+id/ratingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⭐ 4.5"
            android:textColor="#FFD700"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- Latest review heading -->
        <TextView
            android:id="@+id/latestReviewHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latest review"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="6dp" />

        <!-- Review card (filled from API) -->
        <LinearLayout
            android:id="@+id/reviewCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#EEEEEE"
            android:padding="12dp"
            android:layout_margin="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/reviewAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anon"
                android:textStyle="bold"
                android:textColor="#101010"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/reviewRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⭐ 5.0"
                android:textColor="#FFD700"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/reviewBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Great dispensary, friendly staff!"
                android:textColor="#333333"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Actions -->
        <Button
            android:id="@+id/getDirectionsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/get_directions"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/callButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/call_dispensary"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>