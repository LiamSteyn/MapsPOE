<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dashboardLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".DashboardActivity">

    <!-- Header Section with logo + title + profile -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/marleymapslogo"
            android:contentDescription="@string/app_name"/>

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="Marley Maps"
            android:textColor="#101010"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/profileButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="#4CAF50"
            android:text="P"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <!-- Sort Dispensaries Label -->
        <TextView
            android:id="@+id/quickAccessLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sort Dispensaries"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#101010"
            android:layout_marginBottom="8dp"/>

        <!-- ChipGroup for sorting -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/sortChipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            app:singleSelection="true"
            app:selectionRequired="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSortDistance"
                style="@style/Widget.Material3.Chip.Suggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sort: Distance"
                android:checked="true"
                app:checkedIconVisible="false"
                app:chipIconVisible="false"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSortRating"
                style="@style/Widget.Material3.Chip.Suggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sort: Rating"
                app:checkedIconVisible="false"
                app:chipIconVisible="false"/>

        </com.google.android.material.chip.ChipGroup>
    </LinearLayout>

    <!-- List Header -->
    <TextView
        android:id="@+id/dispensaryHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nearby Dispensaries"
        android:textColor="#4CAF50"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- List of Dispensaries -->
    <ListView
        android:id="@+id/dispensaryList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#4CAF50"
        android:dividerHeight="1dp"
        android:background="#FFFFFF"
        android:padding="8dp"
        android:listSelector="@android:color/darker_gray" />

</LinearLayout>
