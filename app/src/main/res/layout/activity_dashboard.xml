<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboardLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFF"
    android:padding="16dp"
    tools:context=".DashboardActivity">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Welcome to Marley Maps"
            android:textColor="#101010"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/profileButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="#4CAF50"
            android:text="P"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <!-- Quick Access Label -->
        <TextView
            android:id="@+id/quickAccessLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Access"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#101010"
            android:layout_marginBottom="8dp"/>

        <!-- Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2">

            <Button
                android:id="@+id/closestButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Closest Dispensary"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/topRatedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Top Rated"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- List Header -->
    <TextView
        android:id="@+id/dispensaryHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nearby Dispensaries"
        android:textColor="#4CAF50"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- List of Dispensaries -->
    <ListView
        android:id="@+id/dispensaryList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#4CAF50"
        android:dividerHeight="1dp"
        android:background="#FFFFFF"
        android:padding="8dp"
        android:listSelector="@android:color/darker_gray" />

</LinearLayout>
